{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 100
      },
      "max-ten": {
        "max": 3
      },
      "difficult-word": false
    },
    "preset-japanese": {
      "sentence-length": false,
      "max-ten": false
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      }
    },
    "spellcheck-tech-word": true
  }
}
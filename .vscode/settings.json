{
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome"
  },
  "cSpell.words": [
    "textlint",
    "techblog",
    "Kiro",
    "textlintrc",
    "markdownlint",
    "biomejs",
    "pids",
    "Qiita",
    "nwiizo",
    "Blurrer"
  ],
  "cSpell.ignorePaths": [
    "node_modules/**",
    "pnpm-lock.yaml",
    ".git/**",
    "**/*.min.js",
    "**/*.min.css",
    "dist/**",
    "build/**",
    ".vscode/**",
    ".kiro/**",
    ".gitignore"
  ]
}